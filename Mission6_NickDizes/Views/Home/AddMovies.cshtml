
@model Movie

<h1>Submit a Movie!</h1>

<form method = "post">
    <input type ="hidden" asp-for="MovieId"/>

    <label asp-for="CategoryId">Category:</label><br />
    <select asp-for="CategoryId">
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName></option>
        }
    </select><br /><br />

    <label asp-for="Title">Title:</label><br />
    <input asp-for="Title" required/><br /><br />

    <label asp-for="Year">Year:</label><br />
    <input asp-for="Year" required/><br /><br />

    <label asp-for="Director">Director:</label><br />
    <input asp-for="Director" /><br /><br />

    <label asp-for="Rating">Rating:</label><br />
    <select asp-for="Rating" >
        <option value="" selected>Please Select One</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br /><br />

    <label asp-for="Edited" required>Edited:</label><br />
    <select asp-for="Edited">
        <option value="" selected>Please Select One</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br /><br />

    <label asp-for="LentTo">Lent To:</label><br />
    <input asp-for="LentTo"/><br /><br />

    <label asp-for="CopiedToPlex">Copied To Plex:</label><br />
    <select asp-for="CopiedToPlex" required>
        <option value="" selected>Please Select One</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br /><br />

    <label asp-for="Notes">Notes:</label><br />
    <input asp-for="Notes" maxlength="25"/><br /><br />

    <button type ="submit">Submit</button>
</form>
